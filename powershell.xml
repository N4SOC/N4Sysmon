            </DriverLoad>
        </RuleGroup>

        <RuleGroup name="" groupRelation="or">
            <ImageLoad onmatch="include">
                <!--NOTE: Using "include" with no rules means nothing in this section will be logged-->
            </ImageLoad>
        </RuleGroup>

        <RuleGroup name="" groupRelation="or">
            <CreateRemoteThread onmatch="include">
            </CreateRemoteThread>
